<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFilmActivity"
    android:background="#FF5722">


    <ImageButton
        android:id="@+id/starButton1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="136dp"
        android:onClick="star1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.818"
        app:srcCompat="@drawable/starempty" />

    <ImageButton
        android:id="@+id/starButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="star2"
        app:layout_constraintStart_toEndOf="@+id/starButton1"
        app:layout_constraintTop_toTopOf="@+id/starButton1"
        app:srcCompat="@drawable/starempty" />

    <ImageButton
        android:id="@+id/starButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="star3"
        app:layout_constraintStart_toEndOf="@+id/starButton2"
        app:layout_constraintTop_toTopOf="@+id/starButton2"
        app:srcCompat="@drawable/starempty" />

    <ImageButton
        android:id="@+id/starButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="star4"
        app:layout_constraintStart_toEndOf="@+id/starButton3"
        app:layout_constraintTop_toTopOf="@+id/starButton3"
        app:srcCompat="@drawable/starempty" />

    <ImageButton
        android:id="@+id/starButton5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="star5"
        app:layout_constraintStart_toEndOf="@+id/starButton4"
        app:layout_constraintTop_toTopOf="@+id/starButton4"
        app:srcCompat="@drawable/starempty" />


    <Button
        android:id="@+id/rateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="rateButton"
        android:text="Rate!"
        android:textSize="14dp"
        android:textStyle="bold"
        app:backgroundTint="@color/material_on_background_emphasis_high_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starButton1" />

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_spinner"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img2_text_id"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/img2_text_id"
        app:layout_constraintTop_toBottomOf="@+id/img2_text_id" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Star rating: "
        app:layout_constraintBottom_toBottomOf="@+id/ratingTextView"
        app:layout_constraintEnd_toStartOf="@+id/ratingTextView" />

    <ImageView
        android:id="@+id/img2_id"
        android:layout_width="131dp"
        android:layout_height="170dp"

        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/img2_text_id"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_spinner"
        android:gravity="center"
        android:text="movies"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img2_id" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="lunchBookingConfirmationActivity"
        android:text="Book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameView" />

    <TextView
        android:id="@+id/lastNameView"
        android:layout_width="255dp"
        android:layout_height="131dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_spinner"
        android:gravity="center"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingTextView"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>